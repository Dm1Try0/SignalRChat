@page
@model ChatModel
@{
}
<link rel="stylesheet" href="css/chat.css">
<html>

<head>
    <title>Topgram</title>

</head>
<body class="container">
    <h1>Topgram</h1>
    <div>
        <div class="col" id="token">

            <div class="mt-3">

                <div id="token" class="text-break"> </div>
            </div>
        </div>
        <div class="block1" id="messages">
            <h2>Messages</h2>
            <form id="send-form">
                <div class="mb-3">
                    <label for="messageText" class="form-label">Message text:</label>
                    <input type="text" class="form-control" id="messageText" value="This is web message for chat">
                </div>
                <button id="send" type="button" class="btn btn-primary">Send</button>
            </form>
            <div>
                <ul id="messageList"></ul>
            </div>
        </div>
        <div class="block2" id="users">
            <h2>Users</h2>

            <div id="userList">
            </div>
            <div class="btn-group invisible" role="group" id="userToolbar">
                <button id="connect" type="button" class="btn btn-success">Connect</button>
                <button id="disconnect" type="button" class="btn btn-danger" disabled>Disconnect</button>
            </div>
        </div>

    </div>
    <script src="microsoft-signalr/signalr.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="js/app.js"></script>
    <script src="js/signalr.js"></script>

</body>
</html>